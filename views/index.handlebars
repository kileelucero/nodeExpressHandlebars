<h1>Burgers!</h1>

<h2>Eat them!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
    <button type="button" class="btn btn-success"><span> EAT </span></button>
    <hr>
    {{/unless}}
    {{/each}}
</ul>

<h2>Eaten!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
    <hr>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>